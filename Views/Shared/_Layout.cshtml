@using AirBB.Models
@{
    var session = new AirBBSession(Context.Session);
    var context = ViewData["Context"] as AirBBContext;
    int count = context == null ? 0 : session.GetReservationCount(context);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AirBB</title>

    <!-- ✅ All external links use HTTPS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/daterangepicker/daterangepicker.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success text-center mb-0 shadow-sm">
            <i class="fa-solid fa-check-circle"></i> @TempData["message"]
        </div>
    }

    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold text-white" asp-controller="Home" asp-action="Index">AirBB</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Residence" ? "active" : "")"
                           asp-controller="Residence" asp-action="List">Homes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Experience" ? "active" : "")"
                           asp-controller="Experience" asp-action="List">Experiences</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Service" ? "active" : "")"
                           asp-controller="Service" asp-action="List">Services</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Reservation" ? "active" : "")"
                           asp-controller="Reservation" asp-action="Index">
                            <i class="fa-solid fa-bookmark"></i> Reservations
                            @if (count > 0)
                            {
                                <span class="badge bg-light text-dark">@count</span>
                            }
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main role="main" class="container pt-4 pb-5">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - AirBB -
            <a asp-controller="Home" asp-action="Support">Support</a> -
            <a asp-controller="Home" asp-action="Cancellation">Cancellation Policy</a> -
            <a asp-controller="Home" asp-action="Terms">Terms & Conditions</a> -
            <a asp-controller="Home" asp-action="Cookies">Cookie Policies</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/moment/min/moment.min.js"></script>
    <script src="~/lib/daterangepicker/daterangepicker.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
